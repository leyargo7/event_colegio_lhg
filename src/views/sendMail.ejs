<!-- muestra la tabla de usuarios registrados -->

<section id="registro" style="margin-bottom: 150px;">
    <div class="" style="padding: 80px;">
        <h2 class="bg-danger text-white p-3 text-center">Registro de Usuarios</h2>
    </div>
    
<div class="container">
    <div class="row">
        <div class="col">
            <form action="/addClientes" method="post" autocomplete="off">
                <label for="">Selecciona el canal de pago</label>
                <select class="form-select mb-3" name="canal" aria-label="Default select example" required>
                    
                    <option></option>
                    <option value="Epayco">Epayco</option>
                    <option value="Particular">Particular</option>  
                  </select>
                <input type="text" name="id" placeholder="Referencia" id="numberReference" required>
                <input type="text" name="name" placeholder="Nombre del Cliente" required>
                <input type="email" name="email" placeholder="Email" required>
                
                <div class="mt-3" id="grupo-1">
                    <button class="btn btn-primary" onclick="ocultar('grupo-1')">
                        Enviar
                    </button>
                </div>
                <script>
                    function ocultar(id){
                        var elemento = document.getElementById(id);
                        elemento.style.display = "none";
                    }
                </script>
                
            </form>
        </div>
    </div>
</div>

<div class="container mt-3">
    <div class="row">
        <div class="col-5">
            <p class="text-center fs-5" id="uuid"><%= _key %></p>
            
        </div>
        <div class="col">
            <button id="btn" class="btn btn-danger" onclick="copyToClickBoard()">Copy</button> 
        </div>
        <script>
            var l = document.getElementById('uuid').innerHTML;
            var j = document.getElementById('numberReference');

            function copyToClickBoard(){
                j.value = l;
            }
        </script>
    </div>
    
</div>

<!-- footer -->

<div style="margin-top:0px;">
